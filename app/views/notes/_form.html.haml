= form_for @note, url: contact_notes_path do |f|
  - if note.errors.any?
    #error_explanation
      %h2
        = pluralize(note.errors.count, "error")
        prohibited this note from being saved:
      %ul
        - note.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :body
    = f.text_area :body
  .field
    = f.label :author
    = f.text_field :author
    = f.hidden_field :contact_id, :value => params[:contact_id]
  .actions
    = f.submit
