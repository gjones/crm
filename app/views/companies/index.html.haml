%h1
  All Companies

.row
  %table
    %thead
      %tr
        %th
          Name
        %th
          Actions
    %tbody
      - @companies.each do |company|
        %tr
          %td
            = company.name
        %tr
          %td
            = link_to "Destroy", [company], method: :delete, data: { confirm: 'Are you sure?' }, :class => 'destructive-link'

.row
  = button_to 'New Company', new_company_path
