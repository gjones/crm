%p#notice= notice
%h1 Tasks
%table
  %thead
    %tr
      %th Title
      %th Detail
      %th Author
      %th Contact
      %th Deadline
      %th Completed
      %th{:colspan => "3"}
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.title
        %td= task.detail
        %td= task.author
        %td= task.contact_id
        %td= task.deadline
        %td= task.completed
        %td= link_to 'Show', contact_task_path(task.contact_id, task.id)
        %td= link_to 'Edit', edit_contact_task_path(task.contact_id, task.id)
        -#%td= link_to 'Destroy', contact_task, method: :delete, data: { confirm: 'Are you sure?' }

