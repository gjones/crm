%head
  %title #{content_for(:title)} | CRM
  %meta{:name => "description", :content => "#{content_for(:description)}"}
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  %meta{:name => "author", :content => "Gareth Dafydd Jones"}
  %meta{:name => "viewport", :content => "width=device-width, initial-scale=1"}
  //%link{:rel => 'canonical', :href => "http://api.fightscore.co#{request.fullpath}"}

  %script{:src => "//maps.google.com/maps/api/js?key=AIzaSyDFE5wox6uN1oC-1rRaqacAHPn-bKVbFMc"}
  %script{:src => "//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"}

  - if current_user.theme == "dark"
    = stylesheet_link_tag 'themes/dark_theme'
  - if current_user.theme == "light"
    = stylesheet_link_tag 'themes/light_theme'
  - if current_user.theme == "white"
    = stylesheet_link_tag 'themes/white_theme'

  = csrf_meta_tags
%body
  .container
    = render 'layouts/partials/sidebar'
    .main-area.twelve
      = render 'layouts/partials/header'
      .content.twelve
        = render 'layouts/partials/notifications'
        = yield
      = render 'layouts/partials/footer'
